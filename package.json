{
  "name": "octokat",
  "version": "0.4.18",
  "description": "Javascript GitHub client for NodeJS or a browser using promises or callbacks",
  "main": "index.js",
  "scripts": {
    "pretest": "coffeelint --file ./coffeelint.json src/**.coffee && npm run dist",
    "test": "VCR_MODE=cache grunt test --verbose",
    "dist": "webpack --config ./webpack.config-node.js -v --progress && webpack --config ./webpack.config-browser.js -v --progress",
    "update": "bower update",
    "bump": "grunt release",
    "blanket": {
      "pattern": [
        "octokat.js"
      ]
    }
  },
  "dependencies": {
    "es6-promise": "3.0.2",
    "xmlhttprequest": "~1.8.0"
  },
  "devDependencies": {
    "browserify": "^10.2.3",
    "chai": "~2.3.0",
    "coffee-loader": "^0.7.2",
    "coffee-script": "^1.9.3",
    "coffeeify": "^1.1.0",
    "coffeelint": "^1.15.7",
    "grunt": "~0.4.5",
    "grunt-browserify": "^4.0.1",
    "grunt-bump": "~0.6.0",
    "grunt-coffeelint": "~0.0.13",
    "grunt-contrib-clean": "~0.7.0",
    "grunt-contrib-coffee": "^0.13.0",
    "grunt-contrib-connect": "~0.11.2",
    "grunt-contrib-watch": "~0.6.1",
    "grunt-mocha-phantomjs": "~2.0.0",
    "grunt-mocha-test": "~0.12.7",
    "mocha": "~2.3.4",
    "octokat-fixtures": "git://github.com/philschatz/octokat-fixtures",
    "sepia": "~2.0.1",
    "sepia-js": "git://github.com/philschatz/sepia.js",
    "watchify": "^3.2.1",
    "webpack": "^1.12.6"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/philschatz/octokat.js.git"
  },
  "keywords": [
    "javascript",
    "github",
    "client",
    "promise",
    "ender"
  ],
  "author": "Philip Schatz",
  "bugs": {
    "url": "https://github.com/philschatz/octokat.js/issues"
  },
  "homepage": "https://github.com/philschatz/octokat.js",
  "directories": {
    "test": "test"
  },
  "tonicExampleFilename": "examples/tonic-example.js",
  "license": "MIT"
}
